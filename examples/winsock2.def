NAME winsock2
DESCRIPTION "Windows Sockets 2.0 API"

EXPORTS
    ; Socket initialization
    WSAStartup@8
    WSACleanup@0
    WSAGetLastError@0
    WSASetLastError@4
    
    ; Socket creation and management
    socket@12
    closesocket@4
    shutdown@8
    
    ; Address functions
    inet_addr@4
    inet_ntoa@4
    htons@4
    htonl@4
    ntohs@4
    ntohl@4
    
    ; Name resolution
    gethostbyname@4
    gethostbyaddr@12
    getservbyname@8
    getservbyport@8
    
    ; Connection functions
    bind@12
    listen@8
    accept@12
    connect@12
    
    ; Data transfer
    send@16
    recv@16
    sendto@24
    recvfrom@24
    
    ; Socket options
    getsockopt@20
    setsockopt@20
    
    ; I/O control
    ioctlsocket@12
    
    ; Select and asynchronous I/O
    select@20
    WSAAsyncSelect@16
    WSAEventSelect@12
    WSACreateEvent@0
    WSACloseEvent@4
    WSASetEvent@4
    WSAResetEvent@4
    WSAWaitForMultipleEvents@20
    
    ; Address conversion (newer functions)
    WSAAddressToStringA@20
    WSAAddressToStringW@20
    WSAStringToAddressA@20
    WSAStringToAddressW@20
